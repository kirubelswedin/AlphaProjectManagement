{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"AllowedHosts": "*",
	"ConnectionStrings": {
		"SqlServer": "Data Source=localhost,1433;Database=yourDatabase;User ID=YourUser;Password=yourPassword;Connect Timeout=30;Encrypt=False;TrustServerCertificate=True;"
	},
	"Authentication": {
		"LoginPath": "/auth/login",
		"AccessDeniedPath": "/accessdenied"
	},
	"Identity": {
		"Roles": ["Admin, User"],
		"standardRole": "User"
	},
	"AzureStorageAccount": {
		"useAzure": true,
		"ConnectionString": "DefaultEndpointsProtocol=https;AccountName=storageName;AccountKey=storageKey;EndpointSuffix=core.windows.net",
		"ContainerName": ""
	}
}
