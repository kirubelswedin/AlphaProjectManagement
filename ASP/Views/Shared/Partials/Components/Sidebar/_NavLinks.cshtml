

<nav class="nav-links">
    <a class="nav-link @(Context.Request.Path == "/" || Context.Request.Path == "/admin/dashboard"  ? "active": "")" asp-controller="Dashboard" asp-action="Index">
        <i class="fa-duotone fa-solid fa-chart-tree-map"></i>
        <span>Dashboard</span>
    </a>

    <a class="nav-link @(Context.Request.Path == "/admin/projects" ? "active" : "")" asp-controller="Projects"
        asp-action="Index">
        <i class="fa-duotone fa-solid fa-briefcase"></i>
        <span>Projects</span>
    </a>

    @if (User.IsInRole("Admin"))
    {
        <a class="nav-link @(Context.Request.Path == "/admin/members" ? "active" : "")" asp-controller="Members"
            asp-action="Index">
            <i class="fa-duotone fa-solid fa-user-group"></i>
            <span>Team Members</span>
        </a>

        <a class="nav-link @(Context.Request.Path == "/admin/clients" ? "active" : "")" asp-controller="Clients"
            asp-action="Index">
            <i class="fa-duotone fa-solid fa-handshake"></i>
            <span>Client</span>
        </a>
    }
</nav>