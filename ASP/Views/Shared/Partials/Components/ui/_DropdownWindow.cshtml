@model DropdownWindowViewModel

<div class="dropdown-content">
    @if (Model.HeaderTitle == "Notifications")
    {
        <div class="dropdown-header">
            <div class="header-title">
                <h4>@Model.HeaderTitle</h4>
                <span class="notification-number">@(Model.NotificationCount ?? 0)</span>
            </div>
        </div>
    }
    
    @if (!Model.Items.Any())
    {
        <div class="dropdown-item @(Model.HeaderTitle == "Notifications" ? "empty-message" : "")">
            <span>@(Model.HeaderTitle == "Notifications" ? "No notifications" : "No items")</span>
        </div>
    }
    else 
    {
        @foreach (var item in Model.Items)
        {
            <div class="dropdown-item @(item.IsDanger ? "danger" : "")" @(item.OnClick != null ? $"onclick={item.OnClick}" : "")>
                @if (!string.IsNullOrEmpty(item.Icon) && Model.HeaderTitle != "Notifications")
                {
                    <i class="@item.Icon"></i>
                }
                @if (!string.IsNullOrEmpty(item.Text) && Model.HeaderTitle != "Notifications")
                {
                    <span>@item.Text</span>
                }
                @if (!string.IsNullOrEmpty(item.AdditionalContent))
                {
                    @Html.Raw(item.AdditionalContent)
                }
            </div>
            @if (item.HasDivider)
            {
                <div class="dropdown-divider"></div>
            }
        }
    }
</div>