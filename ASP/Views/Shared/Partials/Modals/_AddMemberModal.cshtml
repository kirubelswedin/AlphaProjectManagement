@model AddMembersViewModel

@{
  const string modalId = "addmembermodal";
}

<section id="@modalId" class="modal">
  <div class="form-modal-wrapper">
    <div class="form-modal-content">
      <div class="form-modal-header">
        <h3>Add Member</h3>
        <button type="button" class="form-modal-close" data-close="true" data-target="#@modalId">
          <i class="fa-solid fa-xmark"></i>
        </button>
      </div>

      <div class="form-modal-body">
        <form asp-controller="Users" asp-action="AddMember" method="post" enctype="multipart/form-data" novalidate
          id="memberForm" data-id="add">
          <input type="hidden" id="memberId" name="Id" />

          <!-- Member Image -->
          <div class="form-group">
            <label class="form-label hide" for="ImageFile">Member Image</label>
            <div class="image-preview-container shape-round" data-file-upload>
              <img class="hide" alt="Member preview" />
              <div class="circle circle-gray upload-overlay">
                <i class="fa-duotone fa-solid fa-camera"></i>
              </div>
              <input asp-for="ImageFile" accept="image/*" type="file" name="ImageFile" id="ImageFile"
                autocomplete="off" />
            </div>
            <span class="field-error" data-valmsg-for="ImageFile"></span>
          </div>

          <div class="form-column">
            <!-- First Name -->
            <div class="form-group half">
              <label class="form-label" for="firstName">Name</label>
              <label class="form-label hide" for="firstName">First Name</label>
              <input type="text" class="form-input" id="firstName" name="FirstName" placeholder="Enter first name"
                required autocomplete="off" />
              <span class="field-error" data-valmsg-for="FirstName"></span>
            </div>

            <!-- Last Name -->
            <div class="form-group half right">
              <label class="form-label hide" for="lastName">Last Name</label>
              <input type="text" class="form-input" id="lastName" name="LastName" placeholder="Enter last name" required
                autocomplete="off" />
              <span class="field-error" data-valmsg-for="LastName"></span>
            </div>
          </div>

          <div class="form-column">
            <!-- Email -->
            <div class="form-group half">
              <label class="form-label" for="email">Email</label>
              <input type="email" class="form-input" id="email" name="Email" placeholder="ex: myname@example.com"
                required autocomplete="off" />
              <span class="field-error" data-valmsg-for="Email"></span>
            </div>

            <!-- Phone -->
            <div class="form-group half">
              <label class="form-label" for="phone">Phone</label>
              <input type="tel" class="form-input" id="phone" name="PhoneNumber" placeholder="Enter phone number"
                minlength="6" maxlength="15" autocomplete="off" />
              <span class="field-error" data-valmsg-for="PhoneNumber"></span>
            </div>
          </div>

          <!-- Job Title -->
          <div class="form-group">
            <label class="form-label" for="jobTitle">Title</label>
            <input type="text" class="form-input" id="jobTitle" name="JobTitle" placeholder="Enter job title" required
              autocomplete="off" />
            <span class="field-error" data-valmsg-for="JobTitle"></span>
          </div>

          <!-- Street Address -->
          <div class="form-group">
            <label class="form-label" for="streetAddress">Address</label>
            <input type="text" class="form-input" id="streetAddress" name="StreetAddress"
              placeholder="Enter street address" autocomplete="off" />
            <span class="field-error" data-valmsg-for="StreetAddress"></span>
          </div>

          <div class="form-column">
            <!-- Postal Code -->
            <div class="form-group half">
              <label class="form-label" for="postalCode">Postal / Code</label>
              <input type="text" class="form-input" id="postalCode" name="PostalCode" placeholder="Enter postal code"
                autocomplete="off" />
              <span class="field-error" data-valmsg-for="PostalCode"></span>
            </div>

            <!-- City -->
            <div class="form-group half">
              <label class="form-label" for="city">City</label>
              <input type="text" class="form-input" id="city" name="City" placeholder="Enter city" autocomplete="off" />
              <span class="field-error" data-valmsg-for="City"></span>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="form-actions">
            @{
              var buttonModel = new ButtonViewModel
              {
                Text = "Add Member",
                IsSubmit = true,
                Variant = "primary"
              };
            }
            <partial name="Partials/Components/ui/_Button" model="@buttonModel" />
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
