@model MembersFormViewModel

<div id="addMemberModal" class="modal">
  <div class="form-modal-dialog">
    <div class="form-modal-content">
      <div class="form-modal-header">
        <h3>New Member</h3>
        <button type="button" class="form-modal-close" data-close="true" data-target="#addMemberModal">
          <i class="fa-solid fa-xmark"></i>
        </button>
      </div>
      <div class="form-modal-body">
        
        <form id="addMemberForm" asp-controller="Member" asp-action="AddMember" method="post"
              enctype="multipart/form-data" novalidate>
          
          <!-- Profile Image Upload -->
          <div class="image-upload text-center">
            <div class="image-placeholder-container">
              <div class="image-placeholder member-image-placeholder">
                <img class="preview-image" style="display: none;" alt="Member preview"/>
                <div class="upload-overlay">
                  <i class="fa-solid fa-camera"></i>
                </div>
              </div>
              <input type="file" class="hidden-input" name="ProfileImage" accept="image/*"/>
            </div>
          </div>

          <!-- Two Column Form Layout -->
          <div class="form-column">
            <!-- First Name -->
            <div class="form-field half">
              <label class="form-label" for="FirstName">First Name</label>
              <input type="text" class="form-input" id="FirstName" name="FirstName" placeholder="Your first name"
                     required/>
              <span class="field-error" data-valmsg-for="FirstName"></span>
            </div>

            <!-- Last Name -->
            <div class="form-field half">
              <label class="form-label" for="LastName">Last Name</label>
              <input type="text" class="form-input" id="LastName" name="LastName" placeholder="Your last name"
                     required/>
              <span class="field-error" data-valmsg-for="LastName"></span>
            </div>
          </div>

          <!-- Email -->
          <div class="form-field">
            <label class="form-label" for="Email">Email</label>
            <input type="email" class="form-input" id="Email" name="Email" placeholder="Your email address" required/>
            <span class="field-error" data-valmsg-for="Email"></span>
          </div>

          <!-- Phone -->
          <div class="form-field">
            <label class="form-label" for="PhoneNumber">Phone</label>
            <input type="tel" class="form-input" id="PhoneNumber" name="PhoneNumber" placeholder="Your phone number"/>
            <span class="field-error" data-valmsg-for="PhoneNumber"></span>
          </div>

          <!-- Job Title -->
          <div class="form-field">
            <label class="form-label" for="JobTitle">Job Title</label>
            <input type="text" class="form-input" id="JobTitle" name="JobTitle" placeholder="Your job title"/>
            <span class="field-error" data-valmsg-for="JobTitle"></span>
          </div>

          <!-- Address -->
          <div class="form-field">
            <label class="form-label" for="Address_StreetName">Address</label>
            <input type="text" class="form-input" id="Address_StreetName" name="Address.StreetName"
                   placeholder="Your address"/>
            <span class="field-error" data-valmsg-for="Address.StreetName"></span>
          </div>

          <!-- Date of Birth -->
          <div class="form-field">
            <label class="form-label">Date of Birth</label>
            <div class="date-of-birth-container">
              <div class="date-select-wrapper">
                <select class="form-input" id="BirthDay" name="BirthDay">
                  <option value="">Day</option>
                  @for (int i = 1; i <= 31; i++)
                  {
                    <option value="@i">@i</option>
                  }
                </select>
              </div>
              <div class="date-select-wrapper">
                <select class="form-input" id="BirthMonth" name="BirthMonth">
                  <option value="">Month</option>
                  <option value="1">January</option>
                  <option value="2">February</option>
                  <option value="3">March</option>
                  <option value="4">April</option>
                  <option value="5">May</option>
                  <option value="6">June</option>
                  <option value="7">July</option>
                  <option value="8">August</option>
                  <option value="9">September</option>
                  <option value="10">October</option>
                  <option value="11">November</option>
                  <option value="12">December</option>
                </select>
              </div>
              <div class="date-select-wrapper">
                <select class="form-input" id="BirthYear" name="BirthYear">
                  <option value="">Year</option>
                  @for (int i = DateTime.Now.Year - 80; i <= DateTime.Now.Year - 18; i++)
                  {
                    <option value="@i">@i</option>
                  }
                </select>
              </div>
            </div>
          </div>

          <div class="form-actions">
            @{
              var buttonModel = new ButtonViewModel
              {
                Text = "Add Contact",
                IsSubmit = true,
                Variant = "primary"
              };
            }
            <partial name="Partials/Components/ui/_Button" model="@buttonModel"/>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
