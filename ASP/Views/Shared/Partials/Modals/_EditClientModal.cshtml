@model ClientsFormViewModel

<div id="editClientModal" class="modal">
    <div class="form-modal-dialog">
        <div class="form-modal-content">
            <div class="form-modal-header">
                <h3>Edit Client</h3>
                <button type="button" class="form-modal-close" data-close="true" data-target="#editClientModal">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
            <div class="form-modal-body">
                <form id="editClientForm" asp-controller="Client" asp-action="UpdateClient" method="post"
                    enctype="multipart/form-data">
                    <input type="hidden" id="clientId" name="Id" />

                    <!-- Client Logo -->
                    <div class="form-field">
                        <label class="form-label" for="clientImage">Client Logo</label>
                        <div class="image-upload">
                            <div class="image-placeholder-container">
                                <div class="client-image-placeholder">
                                    <img class="preview-image" style="display: none;" alt="Client preview" />
                                    <div class="icon-container">
                                        <i class="fa-solid fa-camera upload-icon"></i>
                                    </div>
                                    <input type="file" class="hidden-input" name="Image" accept="image/*" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Client Name -->
                    <div class="form-field">
                        <label class="form-label" for="clientName">Client Name</label>
                        <input type="text" class="form-input" id="clientName" name="ClientName" required />
                        <span class="field-error" data-valmsg-for="ClientName"></span>
                    </div>

                    <!-- Contact Person -->
                    <div class="form-field">
                        <label class="form-label" for="contactPerson">Contact Person</label>
                        <input type="text" class="form-input" id="contactPerson" name="ContactPerson" required />
                        <span class="field-error" data-valmsg-for="ContactPerson"></span>
                    </div>

                    <!-- Email -->
                    <div class="form-field">
                        <label class="form-label" for="email">Email</label>
                        <input type="email" class="form-input" id="email" name="Email" required />
                        <span class="field-error" data-valmsg-for="Email"></span>
                    </div>

                    <!-- Phone -->
                    <div class="form-field">
                        <label class="form-label" for="phoneNumber">Phone</label>
                        <input type="tel" class="form-input" id="phoneNumber" name="PhoneNumber" />
                        <span class="field-error" data-valmsg-for="PhoneNumber"></span>
                    </div>

                    <!-- Website -->
                    <div class="form-field">
                        <label class="form-label" for="website">Website</label>
                        <input type="url" class="form-input" id="website" name="Website" />
                        <span class="field-error" data-valmsg-for="Website"></span>
                    </div>

                    <!-- UserAddress -->
                    <div class="form-field">
                        <label class="form-label" for="streetName">Street UserAddress</label>
                        <input type="text" class="form-input" id="streetName" name="UserAddress.StreetName" />
                        <span class="field-error" data-valmsg-for="UserAddress.StreetName"></span>
                    </div>

                    <div class="form-column">
                        <div class="form-field">
                            <label class="form-label" for="postalCode">Postal Code</label>
                            <input type="text" class="form-input" id="postalCode" name="UserAddress.PostalCode" />
                            <span class="field-error" data-valmsg-for="UserAddress.PostalCode"></span>
                        </div>

                        <div class="form-field">
                            <label class="form-label" for="city">City</label>
                            <input type="text" class="form-input" id="city" name="UserAddress.City" />
                            <span class="field-error" data-valmsg-for="UserAddress.City"></span>
                        </div>
                    </div>

                    <div class="form-field">
                        <label class="form-label" for="country">Country</label>
                        <input type="text" class="form-input" id="country" name="UserAddress.Country" />
                        <span class="field-error" data-valmsg-for="UserAddress.Country"></span>
                    </div>

                    <div class="form-actions">
                        @{
                            var buttonModel = new ButtonViewModel
                            {
                                Text = "Update Client",
                                IsSubmit = true,
                                Variant = "primary"
                            };
                        }
                        <partial name="Partials/Components/ui/_Button" model="@buttonModel" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>